---
<Layout title="View">
  <!-- <LayoutGrid slot="right"> -->
    <Card slot="left" class="view-card">
      <h2>æŸ¥çœ‹ä¿å­˜çš„æ–‡æœ¬</h2>
      <div id="loading" class="loading">
        <div class="spinner"></div>
        <p>æ­£åœ¨åŠ è½½...</p>
      </div>
      <div id="content" class="content-area" style="display: none;">
        <div class="metadata">
          <span id="created-at"></span>
          <span id="text-length"></span>
        </div>
        <div class="text-content" id="text-content"></div>
        <button id="copy-button" class="copy-button">ğŸ“‹ å¤åˆ¶æ–‡æœ¬</button>
      </div>
      <div id="error" class="error-area" style="display: none;"></div>
    </Card>

    <Card slot="right" class="actions-card">
      <h3>æ“ä½œ</h3>
      <div class="action-buttons">
        <a href="/transfer" class="action-button">
          âœï¸ åˆ›å»ºæ–°æ–‡æœ¬
        </a>
        <button id="download-button" class="action-button" style="display: none;">
          ğŸ’¾ ä¸‹è½½ä¸ºæ–‡ä»¶
        </button>
      </div>
      
      <div class="info-box">
        <h4>æç¤º</h4>
        <p>æ­¤æ–‡æœ¬å·²å®‰å…¨ä¿å­˜åœ¨ Netlify Blob å­˜å‚¨ä¸­ã€‚ä½ å¯ä»¥é€šè¿‡åˆ†äº«æ­¤é“¾æ¥è®©å…¶ä»–äººè®¿é—®ã€‚</p>
      </div>
    </Card>
  <!-- </LayoutGrid> -->

  <style>
    .view-card, .actions-card {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .loading {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 3rem;
      gap: 1rem;
    }

    .spinner {
      width: 40px;
      height: 40px;
      border: 4px solid var(--border-color);
      border-top-color: var(--primary);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .content-area {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .metadata {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      padding: 0.5rem;
      background-color: var(--bg-secondary);
      border-radius: 0.5rem;
      font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .text-content {
      padding: 1rem;
      background-color: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 0.5rem;
      white-space: pre-wrap;
      word-wrap: break-word;
      font-family: 'Geist Mono', monospace;
      color: var(--text-color);
      max-height: 500px;
      overflow-y: auto;
    }

    .copy-button, .action-button {
      padding: 0.75rem 1.5rem;
      background-color: var(--primary);
      color: white;
      border: none;
      border-radius: 0.5rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
      font-size: 1rem;
      text-decoration: none;
      display: inline-block;
      text-align: center;
    }

    .copy-button:hover, .action-button:hover {
      background-color: var(--primary-light);
      transform: translateY(-2px);
    }

    .action-buttons {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .error-area {
      padding: 1rem;
      background-color: rgba(255, 0, 0, 0.1);
      border: 1px solid rgba(255, 0, 0, 0.3);
      border-radius: 0.5rem;
      color: #ff6b6b;
    }

    .info-box {
      margin-top: 1rem;
      padding: 1rem;
      background-color: var(--bg-secondary);
      border-radius: 0.5rem;
      border-left: 3px solid var(--primary);
    }

    .info-box h4 {
      margin-top: 0;
      color: var(--text-color);
    }

    .info-box p {
      margin-bottom: 0;
      color: var(--text-secondary);
      font-size: 0.9rem;
    }
  </style>

  <script>
    const loadingDiv = document.getElementById('loading');
    const contentDiv = document.getElementById('content');
    const errorDiv = document.getElementById('error');
    const textContentDiv = document.getElementById('text-content');
    const createdAtSpan = document.getElementById('created-at');
    const textLengthSpan = document.getElementById('text-length');
    const copyButton = document.getElementById('copy-button');
    const downloadButton = document.getElementById('download-button');

    // ä» URL è·å– key
    const urlParams = new URLSearchParams(window.location.search);
    const key = urlParams.get('key');

    if (!key) {
      if (loadingDiv) loadingDiv.style.display = 'none';
      if (errorDiv) {
        errorDiv.textContent = 'âŒ ç¼ºå°‘è®¿é—®é”®å‚æ•°';
        errorDiv.style.display = 'block';
      }
    } else {
      // åŠ è½½æ•°æ®
      fetch(`/.netlify/functions/get-data?key=${key}`)
        .then(response => response.json())
        .then(data => {
          if (loadingDiv) loadingDiv.style.display = 'none';
          
          if (data.success) {
            if (textContentDiv) textContentDiv.textContent = data.text;
            if (createdAtSpan && data.metadata?.createdAt) {
              createdAtSpan.textContent = `åˆ›å»ºäº: ${new Date(data.metadata.createdAt).toLocaleString()}`;
            }
            if (textLengthSpan && data.metadata?.length) {
              textLengthSpan.textContent = `å­—æ•°: ${data.metadata.length}`;
            }
            if (contentDiv) contentDiv.style.display = 'flex';
            if (downloadButton) downloadButton.style.display = 'block';

            // å¤åˆ¶åŠŸèƒ½
            if (copyButton) {
              copyButton.addEventListener('click', () => {
                navigator.clipboard.writeText(data.text).then(() => {
                  const originalText = copyButton.textContent;
                  copyButton.textContent = 'âœ… å·²å¤åˆ¶ï¼';
                  setTimeout(() => {
                    copyButton.textContent = originalText;
                  }, 2000);
                });
              });
            }

            // ä¸‹è½½åŠŸèƒ½
            if (downloadButton) {
              downloadButton.addEventListener('click', () => {
                const blob = new Blob([data.text], { type: 'text/plain' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `text-${key}.txt`;
                a.click();
                URL.revokeObjectURL(url);
              });
            }
          } else {
            if (errorDiv) {
              errorDiv.textContent = `âŒ ${data.error}`;
              errorDiv.style.display = 'block';
            }
          }
        })
        .catch(error => {
          if (loadingDiv) loadingDiv.style.display = 'none';
          if (errorDiv) {
            errorDiv.textContent = `âŒ åŠ è½½å¤±è´¥: ${error.message}`;
            errorDiv.style.display = 'block';
          }
        });
    }
  </script>
</Layout>
