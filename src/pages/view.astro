    </Card>

    <Card slot="right" class="actions-card">
      <h3>æ“ä½œ</h3>
      <div class="action-buttons">
        <a href="/transfer" class="action-button">
          âœï¸ åˆ›å»ºæ–°æ–‡æœ¬
        </a>
        <button id="download-button" class="action-button" style="display: none;">
          ğŸ’¾ ä¸‹è½½ä¸ºæ–‡ä»¶
        </button>
      </div>
      
      <div class="info-box">
        <h4>æç¤º</h4>
        <p>æ­¤æ–‡æœ¬å·²å®‰å…¨ä¿å­˜åœ¨ Netlify Blob å­˜å‚¨ä¸­ã€‚ä½ å¯ä»¥é€šè¿‡åˆ†äº«æ­¤é“¾æ¥è®©å…¶ä»–äººè®¿é—®ã€‚</p>
      </div>
    </Card>
  <!-- </LayoutGrid> -->

  <style>
    .view-card, .actions-card {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .loading {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 3rem;
      gap: 1rem;
    }

    .spinner {
      width: 40px;
      height: 40px;
      border: 4px solid var(--border-color);
      border-top-color: var(--primary);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .content-area {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .metadata {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      padding: 0.5rem;
      background-color: var(--bg-secondary);
      border-radius: 0.5rem;
      font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .text-content {
      padding: 1rem;
      background-color: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 0.5rem;
      white-space: pre-wrap;
      word-wrap: break-word;
      font-family: 'Geist Mono', monospace;
      color: var(--text-color);
      max-height: 500px;
      overflow-y: auto;
    }

    .copy-button, .action-button {
      padding: 0.75rem 1.5rem;
      background-color: var(--primary);
      color: white;
      border: none;
      border-radius: 0.5rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
      font-size: 1rem;
      text-decoration: none;
      display: inline-block;
      text-align: center;
    }

    .copy-button:hover, .action-button:hover {
      background-color: var(--primary-light);
      transform: translateY(-2px);
    }

    .action-buttons {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .error-area {
      padding: 1rem;
      background-color: rgba(255, 0, 0, 0.1);
      border: 1px solid rgba(255, 0, 0, 0.3);
      border-radius: 0.5rem;
      color: #ff6b6b;
    }

    .info-box {
      margin-top: 1rem;
      padding: 1rem;
      background-color: var(--bg-secondary);
      border-radius: 0.5rem;
      border-left: 3px solid var(--primary);
    }

    .info-box h4 {
      margin-top: 0;
      color: var(--text-color);
    }

    .info-box p {
      margin-bottom: 0;
      color: var(--text-secondary);
      font-size: 0.9rem;
    }

    .list-content {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .text-item {
      padding: 1rem;
      background-color: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 0.5rem;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .text-item:hover {
      border-color: var(--primary);
      transform: translateX(4px);
      background-color: var(--card-bg);
    }

    .text-item-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.5rem;
    }

    .text-item-date {
      font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .text-item-length {
      font-size: 0.75rem;
      color: var(--text-secondary);
      background-color: var(--bg-color);
      padding: 0.25rem 0.5rem;
      border-radius: 0.25rem;
    }

    .text-item-preview {
      color: var(--text-color);
      font-family: 'Geist Mono', monospace;
      font-size: 0.875rem;
      line-height: 1.5;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      opacity: 0.8;
    }

    .empty-state {
      text-align: center;
      padding: 3rem 1rem;
      color: var(--text-secondary);
    }

    .empty-state h3 {
      color: var(--text-color);
      margin-bottom: 0.5rem;
    }

    .back-button-container {
      margin-bottom: 1rem;
    }

    .back-button {
      padding: 0.5rem 1rem;
      background-color: var(--bg-secondary);
      color: var(--text-color);
      border: 1px solid var(--border-color);
      border-radius: 0.5rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .back-button:hover {
      background-color: var(--card-bg);
      border-color: var(--primary);
    }
  </style>

  <script>
    const listView = document.getElementById('list-view');
    const detailView = document.getElementById('detail-view');
    const listLoading = document.getElementById('list-loading');
    const listContent = document.getElementById('list-content');
    const listError = document.getElementById('list-error');
    const backButton = document.getElementById('back-button');

    const loadingDiv = document.getElementById('loading');
    const contentDiv = document.getElementById('content');
    const errorDiv = document.getElementById('error');
    const textContentDiv = document.getElementById('text-content');
    const createdAtSpan = document.getElementById('created-at');
    const textLengthSpan = document.getElementById('text-length');
    const copyButton = document.getElementById('copy-button');
    const downloadButton = document.getElementById('download-button');

    // ä» URL è·å– key
    const urlParams = new URLSearchParams(window.location.search);
    const key = urlParams.get('key');

    // æ˜¾ç¤ºåˆ—è¡¨è§†å›¾
    function showListView() {
      if (listView) listView.style.display = 'block';
      if (detailView) detailView.style.display = 'none';
      // æ›´æ–° URL
      window.history.pushState({}, '', '/view');
    }

    // æ˜¾ç¤ºè¯¦æƒ…è§†å›¾
    function showDetailView(selectedKey) {
      if (listView) listView.style.display = 'none';
      if (detailView) detailView.style.display = 'block';
      // æ›´æ–° URL
      window.history.pushState({}, '', `/view?key=${selectedKey}`);
      loadTextDetail(selectedKey);
    }

    // è¿”å›æŒ‰é’®
    if (backButton) {
      backButton.addEventListener('click', showListView);
    }

    // åŠ è½½æ–‡æœ¬åˆ—è¡¨
    function loadTextList() {
      fetch('/.netlify/functions/list-data')
        .then(response => response.json())
        .then(data => {
          if (listLoading) listLoading.style.display = 'none';
          
          if (data.success && data.items) {
            if (data.items.length === 0) {
              if (listContent) {
                listContent.innerHTML = `
                  <div class="empty-state">
                    <h3>ğŸ“­ è¿˜æ²¡æœ‰ä¿å­˜çš„æ–‡æœ¬</h3>
                    <p>å» <a href="/transfer">åˆ›å»ºä¸€ä¸ª</a> å§ï¼</p>
                  </div>
                `;
                listContent.style.display = 'block';
              }
            } else {
              if (listContent) {
                listContent.innerHTML = data.items.map(item => {
                  const metadata = item.metadata || {};
                  const createdAt = metadata.createdAt 
                    ? new Date(metadata.createdAt).toLocaleString() 
                    : 'æœªçŸ¥æ—¶é—´';
                  const length = metadata.length || 0;
                  const preview = metadata.preview || 'æ— é¢„è§ˆ';
                  
                  return `
                    <div class="text-item" data-key="${item.key}">
                      <div class="text-item-header">
                        <span class="text-item-date">ğŸ“… ${createdAt}</span>
                        <span class="text-item-length">${length} å­—</span>
                      </div>
                      <div class="text-item-preview">${preview}</div>
                    </div>
                  `;
                }).join('');
                listContent.style.display = 'flex';

                // æ·»åŠ ç‚¹å‡»äº‹ä»¶
                listContent.querySelectorAll('.text-item').forEach(item => {
                  item.addEventListener('click', () => {
                    const key = item.getAttribute('data-key');
                    if (key) showDetailView(key);
                  });
                });
              }
            }
          } else {
            if (listError) {
              listError.textContent = `âŒ ${data.error || 'åŠ è½½åˆ—è¡¨å¤±è´¥'}`;
              listError.style.display = 'block';
            }
          }
        })
        .catch(error => {
          if (listLoading) listLoading.style.display = 'none';
          if (listError) {
            listError.textContent = `âŒ åŠ è½½å¤±è´¥: ${error.message}`;
            listError.style.display = 'block';
          }
        });
    }

    // åŠ è½½æ–‡æœ¬è¯¦æƒ…
    function loadTextDetail(textKey) {
      if (loadingDiv) loadingDiv.style.display = 'flex';
      if (contentDiv) contentDiv.style.display = 'none';
      if (errorDiv) errorDiv.style.display = 'none';

      fetch(`/.netlify/functions/get-data?key=${textKey}`)
        .then(response => response.json())
        .then(data => {
          if (loadingDiv) loadingDiv.style.display = 'none';
          
          if (data.success) {
            if (textContentDiv) textContentDiv.textContent = data.text;
            if (createdAtSpan && data.metadata?.createdAt) {
              createdAtSpan.textContent = `åˆ›å»ºäº: ${new Date(data.metadata.createdAt).toLocaleString()}`;
            }
            if (textLengthSpan && data.metadata?.length) {
              textLengthSpan.textContent = `å­—æ•°: ${data.metadata.length}`;
            }
            if (contentDiv) contentDiv.style.display = 'flex';
            if (downloadButton) downloadButton.style.display = 'block';

            // å¤åˆ¶åŠŸèƒ½
            if (copyButton) {
              copyButton.onclick = () => {
                navigator.clipboard.writeText(data.text).then(() => {
                  const originalText = copyButton.textContent;
                  copyButton.textContent = 'âœ… å·²å¤åˆ¶ï¼';
                  setTimeout(() => {
                    copyButton.textContent = originalText;
                  }, 2000);
                });
              };
            }

            // ä¸‹è½½åŠŸèƒ½
            if (downloadButton) {
              downloadButton.onclick = () => {
                const blob = new Blob([data.text], { type: 'text/plain' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `text-${textKey}.txt`;
                a.click();
                URL.revokeObjectURL(url);
              };
            }
          } else {
            if (errorDiv) {
              errorDiv.textContent = `âŒ ${data.error}`;
              errorDiv.style.display = 'block';
            }
          }
        })
        .catch(error => {
          if (loadingDiv) loadingDiv.style.display = 'none';
          if (errorDiv) {
            errorDiv.textContent = `âŒ åŠ è½½å¤±è´¥: ${error.message}`;
            errorDiv.style.display = 'block';
          }
        });
    }

    // åˆå§‹åŒ–ï¼šæ ¹æ®æ˜¯å¦æœ‰ key å†³å®šæ˜¾ç¤ºåˆ—è¡¨è¿˜æ˜¯è¯¦æƒ…
    if (key) {
      showDetailView(key);
    } else {
      loadTextList();
    }
  </script>
</Layout>
